            "value": {
                "default": "",
                "validator": "",
                "visible": true,
                "required": true,
                "order": 1
            },
            "details": {
                "label": "Input SAM/BAM (INPUT)",
                "description": "Input SAM/BAM to be processed"
            },
            "semantics": {
                "ontology": [
                    "http://sswapmeet.sswap.info/sequence/"
                ],
                "minCardinality": 1,
                "fileTypes": [
                    "raw-0"
                ]
            }
        }
                ],
    "parameters": [
                    {
